{
  "name": "pixelbeach",
  "productName": "Pixel Beach",
  "version": "1.1.0",
  "private": true,
  "description": "Hit the waves and score some points",
  "author": "Nathan Hoad <nathan@nathanhoad.net>",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --runInBand",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "icon": "nicns --in ./build/icon.png --out ./build/icon.icns",
    "pack": "electron-builder --dir",
    "dist": "DIST=1 electron-builder"
  },
  "engines": {
    "node": "8.9.1",
    "npm": "5.5.1"
  },
  "contributors": ["Nathan Hoad", "Lilly Piri", "Ben Hoad", "Jaap van Hardeveld"],
  "license": "UNLICENSED",
  "dependencies": {
    "guess-root-path": "^1.0.0",
    "immutable": "^3.8.2",
    "jest": "^21.2.1",
    "node-icns": "0.0.4",
    "phaser-ce": "^2.9.2"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.47.1"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  },
  "build": {
    "appId": "net.nathanhoad.pixelbeach",
    "mac": {
      "category": "public.app-category.arcade-games"
    },
    "dmg": {
      "iconSize": 128,
      "title": "Pixel Beach"
    },
    "linux": {
      "target": {
        "target": "deb",
        "arch": ["x64", "ia32"]
      },
      "category": "Game",
      "desktop": {
        "name": "Pixel Beach",
        "terminal": false,
        "categories": "Games"
      }
    },
    "deb": {
      "compression": "gz"
    },
    "win": {
      "target": [
        {
          "target": "zip"
        },
        {
          "target": "nsis"
        }
      ]
    }
  }
}
